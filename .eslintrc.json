{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-param-reassign": "off",
    "no-useless-concat": "warn",
    "no-unused-vars": "warn",
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "no-var": 2,
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": false
      }
    ],
    "linebreak-style": ["warn", "unix"],
    "import/prefer-default-export": 0
  }
}
