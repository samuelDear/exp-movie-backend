{
  "name": "exp-movie-backend",
  "version": "1.0.0",
  "description": "Practice proyect with NodeJs + Express + React",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "set NODE_ENV=dev&& nodemon index.js",
    "start:dev": "set NODE_ENV=dev&& nodemon index.js",
    "start:qa": "set NODE_ENV=qa&& nodemon index.js",
    "start:prd": "set NODE_ENV=prd&& nodemon index.js",
    "lint": "eslint --fix ./*.js",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Samuel Rojas",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.6",
    "nodemailer": "^6.7.7"
  },
  "devDependencies": {
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
